<form {{on "submit" this.login}}>
  <div class="form-group">
    <label for="email">Email address</label>
    <Input @type="email" id="email" class="form-control form-control--lg" {{on "input" (fn this.update "email")}} required />
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <Input @type="password" id="password" class="form-control form-control--lg" {{on "input" (fn this.update "password")}} required />
  </div>

  <p>{{field-error this.errors type="invalid"}}</p>

  <div class="form-group">
    <button type="submit" class="btn btn--primary btn--lg btn--block" disabled={{this.isDisabled}}>
      Login
    </button>
  </div>
</form>
