    <img src="/logo.svg" alt="Feature flow" class="h-8 w-auto" />

    <nav class="ml-5">
      <LinkTo @route="accounts.account" @model={{@account}} class="navbar-link">
        Requested features
      </LinkTo>

      <a href="#" class="navbar-link">
        Roadmap
      </a>

      <LinkTo
